{% capture procedure_thing_prefix %}{{thing_prefix}}.{{thing.id}}{% endcapture %}

{% assign procedure_procedure_nested_depth = depth | plus: 1%}

{% render "templates/basic_thing", depth: procedure_nested_depth, thing_prefix: procedure_thing_prefix, thing: thing %}

{% if thing.parameters.size > 0 %}
{% render "templates/function_parameters", things: thing.parameters, thing_prefix: procedure_thing_prefix, depth: procedure_nested_depth %}

{% endif %}

{% if thing.types.size > 0 %}
{% render "templates/types", things: thing.types, thing_prefix: procedure_thing_prefix, depth: procedure_nested_depth %}

{% endif %}

{% if thing.constants.size > 0 %}
{% render "templates/function_constants", things: thing.constants, thing_prefix: procedure_thing_prefix, depth: procedure_nested_depth %}

{% endif %}

{% if thing.variables.size > 0 %}
{% render "templates/function_variables", things: thing.variables, thing_prefix: procedure_thing_prefix, depth: procedure_nested_depth %}

{% endif %}

{% if thing.statements.size > 0 %}
{% render "templates/statements", thing_prefix: procedure_thing_prefix, things: thing.statements, depth: procedure_nested_depth %}

{% endif %}
