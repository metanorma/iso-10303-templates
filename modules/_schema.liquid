
{%- liquid
assign found_arm = false
assign found_mim = false

assign suffix = schema.id | split: '_' | last
if suffix == 'arm'
  assign found_arm = true
elsif suffix == 'mim'
  assign found_mim = true
endif

if found_arm
render "templates/module_templates/arm_requirements", schema: schema
endif

if found_mim
render "templates/module_templates/mim_requirements", schema: schema
endif
%}
