{% assign type_nested_depth = depth %}
{% render "templates/resources/basic_thing", depth: type_nested_depth, thing_prefix: thing_prefix, thing: thing %}

{% render "templates/resources/enumerated_items_definitions", definition: thing %}

{% render "templates/resources/where_rules", things: thing.where_rules %}

{% if thing.items.size > 0 %}
{% capture type_thing_prefix %}{{thing_prefix}}.{{thing.id}}{% endcapture %}

{% render "templates/resources/type_items", things: thing.items, thing_prefix: type_thing_prefix, depth: type_nested_depth | plus: 1 %}

{% endif %}
