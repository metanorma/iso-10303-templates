{% render "templates/resources/function_parameters", things: thing.types, thing_prefix: function_thing_prefix, depth: function_nested_depth, found: found %}

{% assign found = true %}

{% endif %}

{% if thing.constants.size > 0 %}
{% render "templates/resources/function_constants", things: thing.constants, thing_prefix: function_thing_prefix, depth: function_nested_depth, found: found %}

{% assign found = true %}

{% endif %}

{% if thing.variables.size > 0 %}
{% render "templates/resources/function_variables", things: thing.variables, thing_prefix: function_thing_prefix, depth: function_nested_depth, found: found %}

{% assign found = true %}

{% endif %}

