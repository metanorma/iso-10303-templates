{% capture function_thing_prefix %}{{thing_prefix}}{% endcapture %}

{% render "templates/resources/basic_thing", depth: depth, thing_prefix: function_thing_prefix, thing: thing %}

{% assign function_nested_depth = depth | plus: 1%}

{% assign found = false %}

{% if thing.parameters.size > 0 %}
{% render "templates/resources/function_parameters", things: thing.parameters, thing_prefix: function_thing_prefix, depth: function_nested_depth %}

{% assign found = true %}

{% endif %}

