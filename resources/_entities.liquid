{% if things.size > 0 %}
{% assign section_title = schema_id | append: " entity definitions" %}

{% render "templates/resources/basic_title", thing_prefix: thing_prefix, anchor: "entities", title: section_title, depth: depth %}

{% for thing in things %}
{% assign entity_nested_depth = depth | plus: 1 %}

{% render "templates/resources/entity", schema: schema, thing: thing, thing_prefix: thing_prefix, depth: entity_nested_depth %}

{% endfor %}

{% endif %}
